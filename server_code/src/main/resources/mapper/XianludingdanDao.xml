<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cl.dao.XianludingdanDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cl.entity.XianludingdanEntity" id="xianludingdanMap">
        <result property="dingdanbianhao" column="dingdanbianhao"/>
        <result property="xianlumingcheng" column="xianlumingcheng"/>
        <result property="qidian" column="qidian"/>
        <result property="tujingluduan" column="tujingluduan"/>
        <result property="mudedi" column="mudedi"/>
        <result property="chuxingfangshi" column="chuxingfangshi"/>
        <result property="jiage" column="jiage"/>
        <result property="ispay" column="ispay"/>
        <result property="yudingshijian" column="yudingshijian"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="xingming" column="xingming"/>
    </resultMap>

    <select id="selectListView"
		resultType="com.cl.entity.view.XianludingdanView" >

		SELECT  xianludingdan.* FROM xianludingdan  xianludingdan 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.cl.entity.view.XianludingdanView" >
		SELECT * FROM xianludingdan  xianludingdan <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM xianludingdan
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM xianludingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM xianludingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM xianludingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM xianludingdan
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
